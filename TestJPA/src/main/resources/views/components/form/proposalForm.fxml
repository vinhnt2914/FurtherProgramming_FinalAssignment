<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" spacing="30.0" type="VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <HBox alignment="CENTER_LEFT" minWidth="300.0" spacing="50.0">
         <children>
            <Label text="Proposed Claim:" />
            <HBox HBox.hgrow="ALWAYS" />
            <Label fx:id="claimLabel" minWidth="300.0" />
         </children>
      </HBox>
        <HBox alignment="CENTER_LEFT" minWidth="300.0" spacing="50.0">
            <children>
                <Label text="To Manager: " />
                <HBox HBox.hgrow="ALWAYS" />
            <VBox>
               <children>
                      <Label fx:id="managerLabel" minWidth="300.0" />
               </children>
            </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="50.0">
            <children>
                <Label text="Message:" />
                <HBox HBox.hgrow="ALWAYS" />
                <TextArea fx:id="messageArea" maxHeight="50.0" maxWidth="300.0" promptText="Enter your message here" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="50.0">
            <children>
                <Button fx:id="submitButton" mnemonicParsing="false" text="Submit">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</fx:root>
