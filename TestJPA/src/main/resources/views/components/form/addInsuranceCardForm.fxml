<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<fx:root stylesheets="@../../../static/form.css" minWidth="200.0" spacing="30.0" type="VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="400.0">
         <children>
            <Label text="Card Number" />
            <HBox HBox.hgrow="ALWAYS" />
            <TextField fx:id="cardNumberField" minWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="400.0">
         <children>
            <Label text="Expire Date" />
            <HBox HBox.hgrow="ALWAYS" />
            <DatePicker fx:id="expireDatePicker" minWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="400.0">
         <children>
            <Label text="Card Holder" />
            <HBox HBox.hgrow="ALWAYS" />
            <VBox spacing="10.0">
               <children>
                  <Button fx:id="selectCardHolderButton" mnemonicParsing="false" text="Select" />
                  <Label fx:id="cardHolderLabel" minWidth="150.0" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="400.0">
         <children>
            <Label text="Policy Owner" />
            <HBox HBox.hgrow="ALWAYS" />
            <Label fx:id="policyOwnerLabel" minWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="400.0" spacing="30.0">
         <children>
            <Button fx:id="submitButton" mnemonicParsing="false" text="Submit" />
            <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</fx:root>
