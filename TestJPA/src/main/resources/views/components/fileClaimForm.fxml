<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.app.components.FileClaimForm">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Claim ID:">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Label>
            <HBox HBox.hgrow="ALWAYS" />
            <TextField fx:id="idField" minWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="InsuredPerson: ">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Label>
            <HBox HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER_RIGHT">
               <children>
                  <Button fx:id="selectInsuredPersonButton" mnemonicParsing="false" text="Select Insured Person" />
                  <Label fx:id="insuredPersonLabel" minWidth="200.0" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Card Number: ">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Label>
            <HBox HBox.hgrow="ALWAYS" />
            <Label fx:id="cardNumberLabel" minWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Claim Date: ">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Label>
            <HBox HBox.hgrow="ALWAYS" />
            <DatePicker fx:id="claimDatePicker" minWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Exam Date: ">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Label>
            <HBox HBox.hgrow="ALWAYS" />
            <DatePicker fx:id="examDatePicker" minWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Claim Amount: ">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Label>
            <HBox HBox.hgrow="ALWAYS" />
            <TextField fx:id="claimAmountField" minWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Status:">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Label>
            <HBox HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="statusComboBox" minWidth="200.0" promptText="Select claim status" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Banking Info:">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Label>
            <HBox HBox.hgrow="ALWAYS" />
            <TextField fx:id="bankingInfoField" minWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="submitButton" mnemonicParsing="false" text="Submit">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
